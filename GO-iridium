param="$global_param --user-data-dir=$UDD"
ssh -fx orion-01 "env DISPLAY=:0.2 google-chrome $param 'http://10.0.8.100:9090?clientID=5'" &

UDD=$HOME/.config/chrome-nfs/orion02-0
mkdir -p $UDD/Default
