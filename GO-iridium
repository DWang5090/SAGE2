#!/bin/sh

tentakel pkill chrome -HUP

global_param="--window-size=1366,768 --kiosk --disable-popup-blocking --nfirst-run --use-gl --enable-accelerated-compositing --allow-file-access-from-files --disable-translate"

UDD=$HOME/.config/chrome-nfs/orion00-0
mkdir -p $UDD/Default
param="$global_param --user-data-dir=$UDD"
ssh -fx orion-00 "env DISPLAY=:0.0 google-chrome $param 'http://10.0.8.100:9090?clientID=0'" &
ssh -fx orion-00 "sleep 5; ./move_mouse" &

UDD=$HOME/.config/chrome-nfs/orion00-1
mkdir -p $UDD/Default
param="$global_param --user-data-dir=$UDD"
ssh -fx orion-00 "env DISPLAY=:0.1 google-chrome $param 'http://10.0.8.100:9090?clientID=1'" &

UDD=$HOME/.config/chrome-nfs/orion00-2
mkdir -p $UDD/Default
param="$global_param --user-data-dir=$UDD"
ssh -fx orion-00 "env DISPLAY=:0.2 google-chrome $param 'http://10.0.8.100:9090?clientID=2'" &

UDD=$HOME/.config/chrome-nfs/orion01-0
mkdir -p $UDD/Default
param="$global_param --user-data-dir=$UDD"
ssh -fx orion-01 "env DISPLAY=:0.0 google-chrome $param 'http://10.0.8.100:9090?clientID=3'" &
ssh -fx orion-01 "sleep 5; ./move_mouse" &

UDD=$HOME/.config/chrome-nfs/orion01-1
