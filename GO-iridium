UDD=$HOME/.config/chrome-nfs/orion03-2
mkdir -p $UDD/Default
param="$global_param --user-data-dir=$UDD"
ssh -fx orion-03 "env DISPLAY=:0.2 google-chrome $param 'http://10.0.8.100:9090?clientID=11'" &

